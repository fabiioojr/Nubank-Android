<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="26dp"
        android:paddingTop="20dp"
        android:paddingEnd="26dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:id="@+id/box_header_credit_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_credit_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group_1" />

            <TextView
                android:id="@+id/title_credit_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/graphik_regular"
                android:letterSpacing="0.07"
                android:text="Pix"
                android:textColor="@color/warm_grey"
                android:textSize="14sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/box_content_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/box_header_credit_card"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/value_credit_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/graphik_semibold"
                android:letterSpacing="0.04"
                android:text="Transfira usando o Pix"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/graphik_regular"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="8dp"
                android:text="Pague e receba em tempo real, sem custo e
para qualquer banco - e ainda concorra a
super prêmios WOWs."
                android:textColor="@color/warm_grey"
                android:textSize="14sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/actionPix"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/graphik_medium"
                android:textColor="@color/colorButtonStroke"
                android:background="@drawable/bg_button_stroke"
                android:text="Começar a usar" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>