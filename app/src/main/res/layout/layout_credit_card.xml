<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="26dp"
        android:paddingTop="20dp"
        android:paddingEnd="26dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:id="@+id/box_header_credit_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_credit_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group" />

            <TextView
                android:id="@+id/title_credit_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/graphik_regular"
                android:letterSpacing="0.07"
                android:textColor="@color/warm_grey"
                android:textSize="14sp"
                android:textStyle="normal"
                android:text="Cartão de Crédito" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/box_content_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/box_header_credit_card"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/graphik_regular"
                android:text="Fatura atual"
                android:textColor="@color/warm_grey"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/value_credit_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/graphik_semibold"
                android:letterSpacing="0.04"
                android:text="R$ 302,40"
                android:textColor="#2ba4db"
                android:textSize="24sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/graphik_regular"
                    android:letterSpacing="0.03"
                    android:textColor="#404040"
                    android:textSize="13sp"
                    android:textStyle="normal"
                    android:text="Limite disponível" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/graphik_semibold"
                    android:letterSpacing="0.01"
                    android:textColor="#347454"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp"
                    android:textStyle="normal"
                    android:text="R$ 279,10" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>